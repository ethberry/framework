{
  "extends": "nx/presets/npm.json",
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "build",
          "clean",
          "deploy:mainnet",
          "lint",
          "prebuild",
          "prepare:contracts:besu",
          "prepare:contracts:mainnet",
          "prepublish",
          "solhint",
          "test",
          "e2e",
          "entity:create",
          "migration:create",
          "migration:generate",
          "migration:revert",
          "migration:run",
          "typeorm",
          "postversion"
        ]
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": [
        "^build"
      ]
    },
    "prepare": {
      "dependsOn": [
        "^prepare"
      ]
    }
  },
  "affected": {
    "defaultBase": "dev"
  }
}
