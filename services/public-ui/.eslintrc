{
  "extends": [
    "@trejgun/eslint-config/presets/tsx"
  ],
  "parserOptions": {
    "project": "./tsconfig.test.json"
  },
  "root": true,
  "rules": {
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "**/test/**/*.{js,jsx}",
          "**/*.test.{js,jsx}",
          "**/*.spec.{js,jsx}",
          "**/webpack.config.{js,ts}",
          "**/webpack.development.{js,ts}",
          "**/webpack.production.js",
          "**/enzyme.config.js"
        ]
      }
    ]
  }
}
