  "devDependencies": {
    "@trejgun/eslint-config": "0.1.7",
    "@types/markdown-draft-js": "2.2.2",
    "@types/node": "14.17.4",
    "@types/react": "17.0.13",
    "@typescript-eslint/eslint-plugin": "4.28.2",
    "@typescript-eslint/parser": "4.28.2",
    "eslint": "7.30.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-standard": "16.0.3",
    "eslint-import-resolver-ts": "0.4.2",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-jest": "24.3.6",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-promise": "5.1.0",
    "eslint-plugin-react": "7.24.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "eslint-plugin-standard": "4.1.0",
    "husky": "4.3.8",
    "lint-staged": "11.0.0",
    "prettier": "2.3.2",
    "typescript": "4.3.5"
  },
  "engines": {
    "node": ">=10"
  },
  "license": "UNLICENSED",
  "name": "@trejgun/solo-root",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/TrejGun/solo"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "build": "lerna run build --stream",
    "clean": "sh scripts/clean.sh",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up",
    "git:push:prod": "git push origin master:production",
    "installdep": "sh scripts/install.sh",
    "kill": "sudo pkill -9 node",
    "lint": "lerna run lint --stream --parallel",
    "migration": "lerna exec --scope @trejgun/solo-admin-api -- npm run migration:run",
    "precommit": "lint-staged",
    "prettier": "prettier \"packages/**/*.{ts,tsx}\" \"services/**/*.{ts,tsx}\" --write",
    "registry": "lerna publish",
    "release": "lerna publish --exact --conventional-commits --registry=https://npm.pkg.github.com/",
    "release:git": "lerna publish from-package --yes --exact --conventional-commits --ignore-scripts --registry=https://npm.pkg.github.com/",
    "start": "lerna exec --parallel --scope @trejgun/solo-admin-api --scope @trejgun/solo-public-api --scope @trejgun/solo-admin-ui --scope @trejgun/solo-public-ui --scope @trejgun/solo-emailer --scope @trejgun/solo-warehouse -- npm start",
    "start:prod": "lerna exec --parallel --scope @trejgun/solo-admin-api --scope @trejgun/solo-public-api --scope @trejgun/solo-emailer -- npm run start:prod",
    "test": "sh scripts/test.sh"
  },
  "version": "0.0.1"
}
