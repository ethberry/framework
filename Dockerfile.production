FROM node:16-alpine AS base
LABEL stage=base

RUN apk add \
  python3 \
  build-base \
  git \
  bash \
  curl \
  gettext \
  nano \
  && npm i -g node-gyp

FROM base AS deps
FROM base AS deps
LABEL stage=deps

USER node
RUN mkdir -p /home/node/framework
WORKDIR /home/node/framework

COPY --chown=node:node . .

RUN npm i --only=production

COPY --chown=node:node . .

RUN npm run bootstrap
